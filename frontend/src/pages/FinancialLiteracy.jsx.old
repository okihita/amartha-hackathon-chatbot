import { useState, useEffect } from 'preact/hooks';

export default function FinancialLiteracy() {
  const [selectedWeek, setSelectedWeek] = useState(null);
  const [weeks, setWeeks] = useState([]);
  const [loading, setLoading] = useState(true);

  console.log('FinancialLiteracy render, selectedWeek:', selectedWeek);

  useEffect(() => {
    fetchCourse();
  }, []);

  const fetchCourse = async () => {
    try {
      const res = await fetch('/api/financial-literacy');
      const data = await res.json();
      const filtered = data
        .filter(w => w.week_number && w.bank_soal && w.bank_soal.length > 0)
        .sort((a, b) => a.week_number - b.week_number);
      setWeeks(filtered);
    } catch (error) {
      console.error('Error loading course:', error);
    } finally {
      setLoading(false);
    }
  };

  const replacePlaceholder = (text) => {
    if (!text || typeof text !== 'string') return text;
    return text.replace(/\[Sapaan\]/gi, 'Anda');
  };

  const getModuleName = (moduleNum) => {
    const moduleNames = {
      1: 'Fondasi Keuangan dan Pencatatan',
      2: 'Pengelolaan Arus Kas',
      3: 'Perencanaan Usaha',
      4: 'Literasi Digital dan Keamanan'
    };
    return moduleNames[moduleNum] || `Module ${moduleNum}`;
  };

  if (loading) return <div class="loading">Loading course content...</div>;

  // Group weeks by module
  const groupedByModule = weeks.reduce((acc, week) => {
    const moduleNum = week.module_number || 0;
    if (!acc[moduleNum]) acc[moduleNum] = [];
    acc[moduleNum].push(week);
    return acc;
  }, {});

  const modules = Object.keys(groupedByModule).sort((a, b) => a - b);

  return (
    <>
      <div class="card">
        <h2>üìö Financial Literacy Course - 15 Weeks</h2>
      </div>

      {modules.map(moduleNum => {
        const moduleWeeks = groupedByModule[moduleNum];
        const moduleName = getModuleName(parseInt(moduleNum));

        return (
          <div key={moduleNum} class="card">
            <h3 style="margin-bottom: 16px; color: #1e3c72;">Modul {moduleNum}: {moduleName}</h3>
            <div class="weeks-grid">
              {moduleWeeks.map(week => {
                const quizCount = week.bank_soal?.length || 0;
                let title = week.module_name || `Week ${week.week_number}`;
                title = title.replace(/^Modul\s+\d+\s*-\s*/i, '');
                title = title.replace(/^Minggu\s+\d+:\s*/i, '');

                return (
                  <div 
                    key={week.week_number} 
                    class="week-card" 
                    onClick={() => {
                      console.log('Week clicked:', week.week_number);
                      setSelectedWeek(week);
                    }}
                    style={{ cursor: 'pointer' }}
                  >
                    <div class="week-header">
                      <div class="week-number">Week {week.week_number}</div>
                    </div>
                    <div class="week-title">{title}</div>
                    <div class="week-quiz-count">{quizCount} questions</div>
                  </div>
                );
              })}
            </div>
          </div>
        );
      })}

      {/* Week Detail Modal */}
      {selectedWeek && (() => {
        console.log('Rendering modal for week:', selectedWeek.week_number);
        return (
        <div 
          style={{
            position: 'fixed',
            top: 0,
            left: 0,
            right: 0,
            bottom: 0,
            background: 'rgba(0,0,0,0.5)',
            display: 'flex',
            alignItems: 'center',
            justifyContent: 'center',
            zIndex: 9999,
            padding: '20px'
          }}
          onClick={() => setSelectedWeek(null)}
        >
          <div 
            style={{
              background: 'white',
              borderRadius: '12px',
              maxWidth: '900px',
              width: '100%',
              maxHeight: '90vh',
              overflow: 'auto',
              position: 'relative',
              padding: '24px'
            }}
            onClick={(e) => e.stopPropagation()}
          >
            <button 
              onClick={() => setSelectedWeek(null)}
              style={{
                position: 'absolute',
                top: '16px',
                right: '16px',
                background: 'none',
                border: 'none',
                fontSize: '28px',
                cursor: 'pointer',
                color: '#999',
                lineHeight: 1
              }}
            >&times;</button>

            <h2 style={{ marginBottom: '8px' }}>Week {selectedWeek.week_number}</h2>
            <h3 style={{ fontSize: '18px', color: '#666', marginBottom: '24px', fontWeight: 500 }}>
              {selectedWeek.module_name ? selectedWeek.module_name.replace(/^Modul\s+\d+\s*-\s*/i, '') : ''}
            </h3>

            {/* Quizzes Section */}
            <div style={{ marginBottom: '32px' }}>
              <h4 style={{ fontSize: '18px', marginBottom: '16px', borderBottom: '2px solid #1e3c72', paddingBottom: '8px', color: '#1e3c72' }}>
                üìù Bank Soal ({selectedWeek.bank_soal?.length || 0})
              </h4>

              {(selectedWeek.bank_soal || []).map((quiz, idx) => (
                <div key={idx} style={{ marginBottom: '24px', padding: '16px', background: '#f9f9f9', borderRadius: '8px', border: '1px solid #e0e0e0' }}>
                  <div style={{ fontWeight: 600, marginBottom: '12px', color: '#333', fontSize: '15px' }}>
                    {idx + 1}. {replacePlaceholder(quiz.question)}
                  </div>
                  <div style={{ display: 'flex', flexDirection: 'column', gap: '8px', marginBottom: '12px' }}>
                    {(quiz.options || []).map((option, optIdx) => {
                      const isCorrect = optIdx === quiz.correct;
                      const optionLabel = String.fromCharCode(97 + optIdx); // a, b, c, d
                      return (
                        <div key={optIdx} style={{
                          padding: '10px 12px',
                          background: isCorrect ? '#d4edda' : 'white',
                          border: `2px solid ${isCorrect ? '#28a745' : '#e0e0e0'}`,
                          borderRadius: '6px',
                          fontSize: '14px',
                          color: isCorrect ? '#155724' : '#555'
                        }}>
                          <strong style={{ textTransform: 'uppercase', marginRight: '8px' }}>{optionLabel}.</strong>
                          {replacePlaceholder(option)}
                          {isCorrect && <span style={{ float: 'right', fontSize: '16px' }}>‚úÖ</span>}
                        </div>
                      );
                    })}
                  </div>
                  {quiz.explanation && (
                    <div style={{ padding: '12px', background: '#fff3cd', borderLeft: '4px solid #ffc107', borderRadius: '4px', fontSize: '13px', color: '#856404' }}>
                      <strong>üí° Pembahasan:</strong> {replacePlaceholder(quiz.explanation)}
                    </div>
                  )}
                </div>
              ))}
            </div>

            {/* Metadata Section */}
            <div style={{ borderTop: '2px solid #f0f0f0', paddingTop: '24px' }}>
              <h4 style={{ fontSize: '18px', marginBottom: '16px', borderBottom: '2px solid #1e3c72', paddingBottom: '8px', color: '#1e3c72' }}>
                üìä Week Metadata
              </h4>
              
              <div style={{ display: 'grid', gridTemplateColumns: '1fr 1fr', gap: '16px', fontSize: '14px' }}>
                {selectedWeek.description && (
                  <div style={{ gridColumn: '1 / -1', padding: '12px', background: '#f8f9fa', borderRadius: '6px' }}>
                    <strong style={{ color: '#666' }}>Description:</strong>
                    <div style={{ marginTop: '4px', color: '#555' }}>{selectedWeek.description}</div>
                  </div>
                )}
                
                {selectedWeek.materi_penyampaian && (
                  <div style={{ gridColumn: '1 / -1', padding: '12px', background: '#f8f9fa', borderRadius: '6px' }}>
                    <strong style={{ color: '#666' }}>Materi Penyampaian:</strong>
                    
                    {selectedWeek.materi_penyampaian.pancingan_awal?.length > 0 && (
                      <div style={{ marginTop: '12px' }}>
                        <strong style={{ fontSize: '13px', color: '#007bff' }}>üé£ Pancingan Awal (Hook):</strong>
                        <ul style={{ marginTop: '4px', paddingLeft: '20px', color: '#555', fontSize: '14px' }}>
                          {selectedWeek.materi_penyampaian.pancingan_awal.map((item, i) => (
                            <li key={i} style={{ marginBottom: '4px' }}>{replacePlaceholder(item)}</li>
                          ))}
                        </ul>
                      </div>
                    )}
                    
                    {selectedWeek.materi_penyampaian.materi_inti?.length > 0 && (
                      <div style={{ marginTop: '12px' }}>
                        <strong style={{ fontSize: '13px', color: '#28a745' }}>üìñ Materi Inti (Content):</strong>
                        <ul style={{ marginTop: '4px', paddingLeft: '20px', color: '#555', fontSize: '14px' }}>
                          {selectedWeek.materi_penyampaian.materi_inti.map((item, i) => (
                            <li key={i} style={{ marginBottom: '4px' }}>{replacePlaceholder(item)}</li>
                          ))}
                        </ul>
                      </div>
                    )}
                    
                    {selectedWeek.materi_penyampaian.instruksi_aksi?.length > 0 && (
                      <div style={{ marginTop: '12px' }}>
                        <strong style={{ fontSize: '13px', color: '#ff9800' }}>‚úÖ Instruksi Aksi (Actionable):</strong>
                        <ul style={{ marginTop: '4px', paddingLeft: '20px', color: '#555', fontSize: '14px' }}>
                          {selectedWeek.materi_penyampaian.instruksi_aksi.map((item, i) => (
                            <li key={i} style={{ marginBottom: '4px' }}>{replacePlaceholder(item)}</li>
                          ))}
                        </ul>
                      </div>
                    )}
                  </div>
                )}

                {selectedWeek.indikator_kelulusan && selectedWeek.indikator_kelulusan.length > 0 && (
                  <div style={{ padding: '12px', background: '#f8f9fa', borderRadius: '6px' }}>
                    <strong style={{ color: '#666' }}>Indikator Kelulusan:</strong>
                    <div style={{ marginTop: '4px', color: '#555' }}>{selectedWeek.indikator_kelulusan.length} items</div>
                  </div>
                )}

                {selectedWeek.logika_feedback && selectedWeek.logika_feedback.length > 0 && (
                  <div style={{ padding: '12px', background: '#f8f9fa', borderRadius: '6px' }}>
                    <strong style={{ color: '#666' }}>Logika Feedback:</strong>
                    <div style={{ marginTop: '4px', color: '#555' }}>{selectedWeek.logika_feedback.length} items</div>
                  </div>
                )}

                {selectedWeek.source_doc_id && (
                  <div style={{ padding: '12px', background: '#f8f9fa', borderRadius: '6px' }}>
                    <strong style={{ color: '#666' }}>Source Doc ID:</strong>
                    <div style={{ marginTop: '4px' }}>
                      <a 
                        href={`https://docs.google.com/document/d/${selectedWeek.source_doc_id}`}
                        target="_blank"
                        rel="noopener noreferrer"
                        style={{ color: '#007bff', fontSize: '12px', wordBreak: 'break-all', textDecoration: 'underline' }}
                      >
                        {selectedWeek.source_doc_id}
                      </a>
                    </div>
                  </div>
                )}

                {selectedWeek.imported_at && (
                  <div style={{ padding: '12px', background: '#f8f9fa', borderRadius: '6px' }}>
                    <strong style={{ color: '#666' }}>Last Imported:</strong>
                    <div style={{ marginTop: '4px', color: '#555' }}>{new Date(selectedWeek.imported_at).toLocaleString()}</div>
                  </div>
                )}
              </div>
            </div>
          </div>
        </div>
        );
      })()}
    </>
  );
}
